<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cv"
                android:gravity="center_horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/picture_profile_tutor"
                    android:layout_width="250dp"
                    android:layout_height="250dp"
                    android:layout_gravity="bottom"
                    android:layout_marginBottom="10dp"
                    app:civ_border_width="5dp"
                    app:civ_border_color="#d4cece"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ddedea"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/name_profile_tutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Harun-or-Rashid"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/university_profile_tutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="University of Dhaka"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/dept_profile_tutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CSE"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/year_profile_tutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2nd Year"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/exp_profile_tutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="(3 years experience)"
                    android:textSize="15dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/gender_profile_tutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/ic_supervisor_account_black_24dp"
                    android:text="Male"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/address_profile_tutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/ic_place_black_24dp"
                    android:text="441/1F west Sewrapara Mirpur,Dhaka."
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/phone_profile_tutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:text="01871445680"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/email_profile_tutor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:drawableLeft="@drawable/ic_email_black_24dp"
                    android:text="harunducse23rd@gmail.com"
                    android:textSize="15dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>